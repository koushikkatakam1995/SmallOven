<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ase.smalloven.register"
    android:background="#b5009c9a"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageView4"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_appicon"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cook Book Recipes"
            android:id="@+id/textView11"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:textColor="#f9f7f7"
            android:layout_weight="1"
            android:textStyle="italic" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="#ffffff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="FIRST NAME"
                android:id="@+id/textView8"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtFirstName"
                android:textColor="#616161"
                android:textSize="16sp"
                android:layout_weight="1"
                android:hint="Enter First Name"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="LAST NAME"
                android:id="@+id/textView3"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtLastName"
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_weight="1"
                android:hint="Enter Last Name"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="EMAIL ADDRESS"
                android:id="@+id/textView4"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txtEmail"
                android:textColor="#616161"
                android:textSize="16sp"
                android:layout_weight="1"
                android:hint="Enter Email Address"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="PASSWORD"
                android:id="@+id/textView5"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtPassword"
                android:textColor="#616161"
                android:textSize="16sp"
                android:layout_weight="1"
                android:hint="Enter Password"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="POSTAL PINCODE"
                android:id="@+id/textView9"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtPincode"
                android:hint="Enter Pincode"
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Weekly Calorie Target"
                android:id="@+id/textView44"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtWeeklyCalorieTarget"
                android:hint="Enter Weekly Calorie Target"
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:id="@+id/BtnRegister"
            android:textSize="18sp"
            android:background="#ffffff"
            android:padding="10dp"
            android:layout_margin="2dp" />
    </LinearLayout>

</LinearLayout>

